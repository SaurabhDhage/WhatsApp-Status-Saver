<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewImageMedia"
    android:layout_margin="5dp"
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:clickable="true"

    app:cardCornerRadius="6dp"
    app:cardBackgroundColor="@color/white"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imageViewImageMedia"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_weight="1"

                android:scaleType="centerCrop"
                />

            <ImageButton
                android:id="@+id/wpshare"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignBottom="@id/imageViewImageMedia"
               android:layout_alignRight="@id/imageViewImageMedia"
                android:background="@drawable/ic_whatsapp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>



